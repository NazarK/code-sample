<% if @slot.errors.present? %>
  alert("<%= @slot.errors.full_messages.join("\n").html_safe %>")
<% end %>

<% if @slot_other.errors.present? %>
  alert("<%= @slot_other.errors.full_messages.join("\n").html_safe %>")
<% end %>

<% if @slot.errors.present? || @slot_other.errors.present? %>
    <%= render "lists/lists_refresh.js.erb" %>
<% end %>
